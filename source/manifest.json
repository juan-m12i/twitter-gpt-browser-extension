{
  "manifest_version": 3, // Updated to v3
  "name": "OpenAI Twitter Integration",
  "version": "1.0",
  "description": "Add OpenAI GPT-3.5 Turbo explanations to tweets.",
  "icons": {
    "48": "openai.svg",
    "96": "openai.svg"
  },
  "action": { // Changed from "browser_action" to "action"
    "default_icon": "openai.svg",
    "default_popup": "modal.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["./content.js", "./modal.js", "./open-ai-api.js", "secrets.js"],
      "run_at": "document_idle",
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [ // Added "host_permissions" for clarity, even though this is optional since "permissions" would still work in v3
    "*://api.openai.com/*"
  ]
}